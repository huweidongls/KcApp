<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sy_fenlei_lv_rl"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/sy_fenlei_lv_img"
            android:src="@drawable/yundong"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sy_fenlei_lv_icon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sy_fenlei_lv_img"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/sy_fenlei_lv_title"
                android:textColor="#343434"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="#音乐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/sy_fenlei_lv_title"
                android:id="@+id/sy_fenlei_lv_content"
                android:textSize="14sp"
                android:text="钢琴、声乐、笛子、口琴等"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/sy_fenlei_lv_icon"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/paixu"
            android:layout_width="16dp"
            android:layout_height="16dp" />

    </RelativeLayout>

</RelativeLayout>
