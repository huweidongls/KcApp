<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context="com.example.administrator.kcapp.activity.MyFriendActivity">

    <RelativeLayout
        android:id="@+id/activity_my_friend_top_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height">

        <RelativeLayout
            android:id="@+id/activity_my_friend_back"
            android:layout_width="@dimen/top_title_height"
            android:layout_height="@dimen/top_title_height">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/top_title_text_size"
            android:textColor="#343434"
            android:textStyle="bold"
            android:text="好友"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_sy_fb_dt_sc"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#333333"
            android:textSize="19sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:layout_below="@+id/activity_my_friend_top_rl"
        android:id="@+id/activity_my_friend_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="5dp">

    </net.lucode.hackware.magicindicator.MagicIndicator>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/activity_my_friend_tab"
        android:id="@+id/activity_my_friend_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:persistentDrawingCache="animation" />

</RelativeLayout>
