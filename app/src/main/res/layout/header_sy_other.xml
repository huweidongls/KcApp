<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/fragment_sy_other_lv_header_title"
            android:layout_centerVertical="true"
            android:text="近期热门"
            android:textSize="22sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/fragment_sy_other_lv_header_title"
            android:layout_centerVertical="true"
            android:src="@drawable/more"
            android:layout_width="16dp"
            android:layout_height="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/fragment_sy_other_lv_header_iv1"
            android:src="@drawable/img1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/fragment_sy_other_lv_header_time1"
            android:background="@drawable/bg_fragment_sy_tj_time"
            android:textColor="#ffffff"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="10:48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/fragment_sy_other_lv_header_touxiang"
            android:src="@drawable/touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment_sy_other_lv_header_fenxiang"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/fragment_sy_other_lv_header_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fragment_sy_other_lv_header_tv_title1"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="100句超级实用的日语，跟我.aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa.."
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_sy_other_lv_header_rv1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_sy_other_lv_header_fenxiang"
            android:src="@drawable/fenxiang"
            android:layout_width="17dp"
            android:layout_height="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_sy_other_lv_header_rl_shipin1"
