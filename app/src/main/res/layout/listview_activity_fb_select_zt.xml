<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:id="@+id/activity_sy_fb_dt_zt_lv1_tv"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="推荐"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_sy_fb_dt_zt_lv1_img"
            android:src="@drawable/shenghuo"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/activity_sy_fb_dt_zt_lv1_img"
            android:id="@+id/activity_sy_fb_dt_zt_lv1_name"
            android:textColor="#333333"
            android:text="#生活"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:ems="3"
            android:background="@drawable/bg_fragment_sy_tj_guanzhu"
            android:layout_centerVertical="true"
            android:id="@+id/activity_sy_fb_dt_zt_lv1_select"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:text="选择"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
