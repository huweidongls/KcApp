<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/fragment_sy_tj_lv_title"
            android:layout_centerVertical="true"
            android:text="牛人牛事"
            android:textSize="22sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_sy_tj_lv_jingxuan"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fragment_sy_tj_lv_title"
            android:text="今日精选"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:src="@drawable/more"
            android:layout_toRightOf="@+id/fragment_sy_tj_lv_jingxuan"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/fragment_sy_tj_lv_guanzhu"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_fragment_sy_tj_guanzhu"
            android:text="+关注"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/fragment_sy_tj_lv_iv1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/fragment_sy_tj_lv_time1"
            android:textSize="15sp"
            android:background="@drawable/bg_fragment_sy_tj_time"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="10:48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/fragment_sy_tj_lv_touxiang"
            android:src="@drawable/touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment_sy_tj_lv_fenxiang"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/fragment_sy_tj_lv_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fragment_sy_tj_lv_title1"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="100句超级实用的日语，跟我.aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa.."
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_sy_tj_lv_rv1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp" ></android.support.v7.widget.RecyclerView>

        </LinearLayout>
        
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_sy_tj_lv_fenxiang"
            android:src="@drawable/fenxiang"
            android:layout_width="17dp"
            android:layout_height="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_sy_tj_lv_rl_shipin1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:id="@+id/fragment_sy_tj_lv_rl2"
            android:layout_width="160dp"
            android:layout_height="110dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/fragment_sy_tj_lv_iv2"
                android:layout_width="160dp"
                android:layout_height="110dp" />

            <TextView
                android:id="@+id/fragment_sy_tj_lv_time2"
                android:background="@drawable/bg_fragment_sy_tj_time"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="10:48"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_sy_tj_lv_title2"
            android:textStyle="bold"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="100句超级实用的日语，跟我一起学习吧！"
            android:layout_toRightOf="@+id/fragment_sy_tj_lv_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_toLeftOf="@+id/fragment_sy_tj_lv_fenxiang1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fragment_sy_tj_lv_rl2"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/fragment_sy_tj_lv_rv2"
            android:layout_width="match_parent"
            android:layout_height="20dp" ></android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/fragment_sy_tj_lv_fenxiang1"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/fenxiang"
            android:layout_width="17dp"
            android:layout_height="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_sy_tj_lv_rl_shipin2"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:id="@+id/fragment_sy_tj_lv_rl3"
            android:layout_width="160dp"
            android:layout_height="110dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/fragment_sy_tj_lv_iv3"
                android:layout_width="160dp"
                android:layout_height="110dp" />

            <TextView
                android:id="@+id/fragment_sy_tj_lv_time3"
                android:background="@drawable/bg_fragment_sy_tj_time"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="10:48"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_sy_tj_lv_title3"
            android:textStyle="bold"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="100句超级实用的日语，跟我一起学习吧！"
            android:layout_toRightOf="@+id/fragment_sy_tj_lv_rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_toLeftOf="@+id/fragment_sy_tj_lv_fenxiang2"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fragment_sy_tj_lv_rl3"
            android:id="@+id/fragment_sy_tj_lv_rv3"
            android:layout_width="match_parent"
            android:layout_height="20dp" ></android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/fragment_sy_tj_lv_fenxiang2"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/fenxiang"
            android:layout_width="17dp"
            android:layout_height="17dp" />

    </RelativeLayout>

</LinearLayout>
