<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/niuren_lv_iv"
        android:scaleType="centerCrop"
        android:src="@drawable/img1"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <RelativeLayout
        android:id="@+id/niuren_lv_rl"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/niuren_lv_tv1"
                android:lines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:text="超级实用的旅游日语旅行日本..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/niuren_lv_tv1"
                android:layout_width="wrap_content"
                android:layout_height="30dp">
                
                <TextView
                    android:id="@+id/niuren_lv_tv_biaoqian"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/niuren_lv_tv2"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:text="10:48"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
