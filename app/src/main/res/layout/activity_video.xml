<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.kcapp.activity.VideoActivity">

    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/activity_video_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="90dp"
        android:layout_above="@+id/activity_video_ll_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/activity_video_iv_touxiang"
                android:src="@drawable/touxiang"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/activity_video_tv_nickname"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:text="会飞的鸭子"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_video_tv_c_time"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_weight="2"
                    android:text="发布: 19:52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/activity_video_tv_content"
            android:textColor="#ffffff"
            android:text="手太小，钢琴根本玩不来啊！你们是不是也是啊，还有什么好用的乐器。手太小，钢琴根本玩不来啊！"
            android:ellipsize="end"
            android:lines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/activity_video_ll_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/shipin_pl"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/niuzan"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/shipin_fx"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
