<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_three_top_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/fragment_three_tl_dingwei"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:textColor="#333333"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:id="@+id/fragment_three_tv_dingwei"
                android:ems="4"
                android:ellipsize="end"
                android:text="齐齐哈尔"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fragment_three_tv_dingwei"
                android:src="@drawable/down"
                android:layout_width="15dp"
                android:layout_height="7dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_toLeftOf="@+id/fragment_three_iv_fenlei"
            android:layout_toRightOf="@+id/fragment_three_tl_dingwei"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="10dp"
            android:background="#F5F4F9"
            android:id="@+id/fragment_three_rl_sousuo"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fragment_three_et_sousuo"
                android:src="@drawable/sousuo"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:gravity="center"
                android:textSize="16sp"
                android:text="搜索课程"
                android:id="@+id/fragment_three_et_sousuo"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </RelativeLayout>

        <ImageView
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_three_iv_fenlei"
            android:src="@drawable/fenlei"
            android:layout_width="32dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <ListView
        android:divider="@null"
        android:scrollbars="none"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:layout_below="@+id/fragment_three_top_rl"
        android:id="@+id/fragment_three_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>
