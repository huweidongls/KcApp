<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="90dp"
        android:layout_above="@+id/activity_video_ll_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/activity_niuren_iv_touxiang"
                android:src="@drawable/touxiang"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/activity_niuren_tv_nickname"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:text="会飞的鸭子"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_niuren_tv_c_time"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_weight="2"
                    android:text="发布: 19:52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/activity_niuren_tv_content"
            android:textColor="#ffffff"
            android:text="手太小，钢琴根本玩不来啊！你们是不是也是啊，还有什么好用的乐器。手太小，钢琴根本玩不来啊！"
            android:ellipsize="end"
            android:lines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/activity_video_ll_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/activity_niuren_ll_like"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/activity_niuren_iv_like"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/heart2"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/activity_niuren_tv_like_num"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="2.4W"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/activity_niuren_ll_pl"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/shipin_pl"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/activity_niuren_tv_pl_num"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="2.4W"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/activity_niuren_ll_zan"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/activity_niuren_iv_zan"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/niuzan"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/activity_niuren_tv_zan_num"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="2.4W"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>