<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39374D"
    tools:context="com.example.administrator.kcapp.activity.TieziXqActivity">

    <RelativeLayout
        android:id="@+id/niuren_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height">

        <RelativeLayout
            android:id="@+id/activity_tiezi_xq_back"
            android:layout_width="@dimen/top_title_height"
            android:layout_height="@dimen/top_title_height">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/w_back"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/top_title_text_size"
            android:textColor="#FAFBFF"
            android:textStyle="bold"
            android:text="帖子详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/niuren_rl"
        android:layout_above="@+id/activity_tiezi_xq_rl_bottom"
        android:background="#2A293B"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:divider="@null"
            android:scrollbars="none"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:id="@+id/activity_tiezi_xq_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="#39374D"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:id="@+id/activity_tiezi_xq_tv_ispl"
            android:gravity="center"
            android:textSize="16sp"
            android:text="暂无评论"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

    <RelativeLayout
        android:background="#2A293B"
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_tiezi_xq_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/activity_tiezi_xq_ll_like"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_tiezi_xq_iv_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/heart2" />

            <TextView
                android:id="@+id/activity_tiezi_xq_tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_tiezi_xq_ll_pl"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/activity_tiezi_xq_ll_like"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shipin_pl" />

            <TextView
                android:id="@+id/activity_tiezi_xq_tv_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_tiezi_xq_ll_zan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/activity_tiezi_xq_ll_pl"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_tiezi_xq_iv_zan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/zan2" />

            <TextView
                android:id="@+id/activity_tiezi_xq_tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#ffffff" />

        </LinearLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/fragment_gz_zp_lv_fenxiang"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shipin_fx" />

    </RelativeLayout>

</RelativeLayout>
