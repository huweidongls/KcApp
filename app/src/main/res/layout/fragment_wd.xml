<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/niuren_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_wd_settings"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/wd_set"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_wd_touxiang"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/meitoux"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/fragment_wd_tv_nickname"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="李嘉图丶"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_wd_tv_person_zy"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:text="查看个人主页 >"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_toLeftOf="@+id/fragment_wd_view"
            android:id="@+id/fragment_wd_rl_like"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/fragment_wd_iv_like"
                android:src="@drawable/wd_like"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="#616161"
                android:layout_toRightOf="@+id/fragment_wd_iv_like"
                android:layout_centerVertical="true"
                android:text="喜欢"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_centerInParent="true"
            android:id="@+id/fragment_wd_view"
            android:background="#B8B8B8"
            android:layout_width="1dp"
            android:layout_height="20dp"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/fragment_wd_view"
            android:id="@+id/fragment_wd_rl_friend"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_wd_tv_chengjiu"
                android:layout_centerInParent="true"
                android:textColor="#616161"
                android:text="好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/fragment_wd_tv_chengjiu"
                android:src="@drawable/friend"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:background="#D3D3D3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:divider="@null"
        android:scrollbars="none"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:id="@+id/fragment_wd_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
