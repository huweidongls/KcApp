<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_sy_fx_lv_header_viewPager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img1"
        android:id="@+id/fragment_sy_fx_lv_header_guanggao"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#E4E4E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/fragment_sy_fx_lv_header_title"
            android:layout_centerVertical="true"
            android:text="本周排行"
            android:textSize="22sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_title"
            android:layout_centerVertical="true"
            android:src="@drawable/more"
            android:layout_width="16dp"
            android:layout_height="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/fragment_sy_fx_lv_header_iv1"
            android:src="@drawable/img1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/fragment_sy_fx_lv_header_time1"
            android:background="@drawable/bg_fragment_sy_tj_time"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="10:48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/fragment_sy_fx_lv_header_touxiang"
            android:src="@drawable/touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment_sy_fx_lv_header_fenxiang"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fragment_sy_fx_lv_header_title1"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="100句超级实用的日语，跟我.aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa.."
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_sy_fx_lv_header_rv1"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_sy_fx_lv_header_fenxiang"
            android:src="@drawable/fenxiang"
            android:layout_width="17dp"
            android:layout_height="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_sy_fx_lv_header_shipin1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:id="@+id/fragment_sy_fx_lv_header_rl2"
            android:layout_width="160dp"
            android:layout_height="110dp">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img2"
                android:id="@+id/fragment_sy_fx_lv_header_iv2"
                android:layout_width="160dp"
                android:layout_height="110dp" />

            <TextView
                android:id="@+id/fragment_sy_fx_lv_header_time2"
                android:background="@drawable/bg_fragment_sy_tj_time"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="10:48"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_sy_fx_lv_header_title2"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="100句超级实用的日语，跟我一起学习吧！"
            android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_sy_fx_lv_header_rv2"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_rl2"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/fragment_sy_fx_lv_header_fenxiang1"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/fenxiang"
            android:layout_width="17dp"
            android:layout_height="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_sy_fx_lv_header_shipin2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:id="@+id/fragment_sy_fx_lv_header_rl3"
            android:layout_width="160dp"
            android:layout_height="110dp">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img2"
                android:id="@+id/fragment_sy_fx_lv_header_iv3"
                android:layout_width="160dp"
                android:layout_height="110dp" />

            <TextView
                android:id="@+id/fragment_sy_fx_lv_header_time3"
                android:background="@drawable/bg_fragment_sy_tj_time"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="10:48"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_sy_fx_lv_header_title3"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="100句超级实用的日语，跟我一起学习吧！"
            android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_sy_fx_lv_header_rv3"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_rl3"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/fragment_sy_fx_lv_header_fenxiang2"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/fenxiang"
            android:layout_width="17dp"
            android:layout_height="17dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#343434"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="热门类别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/fragment_sy_fx_lv_header_chakanquanbu"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#343434"
                    android:text="查看全部分类"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv"
                    android:src="@drawable/more"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_sy_fx_lv_header_leibie1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/fragment_sy_fx_lv_header_leibie1_img"
                android:src="@drawable/yundong"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/fragment_sy_fx_lv_header_leibie1_tv1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#343434"
                android:text="#运动"
                android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_leibie1_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:id="@+id/fragment_sy_fx_lv_header_leibie1_tv2"
                android:layout_below="@+id/fragment_sy_fx_lv_header_leibie1_tv1"
                android:textSize="16sp"
                android:text="马上开始的世界杯，各个队伍的准备非常充分"
                android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_leibie1_img"
                android:layout_toLeftOf="@+id/fragment_sy_fx_lv_header_leibie1_guanzhu"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_sy_fx_lv_header_leibie1_guanzhu"
                android:layout_marginRight="3dp"
                android:background="@drawable/bg_fragment_sy_tj_guanzhu"
                android:text="+关注"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        
        <View
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <RelativeLayout
            android:id="@+id/fragment_sy_fx_lv_header_leibie2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/fragment_sy_fx_lv_header_leibie2_img"
                android:src="@drawable/yinyue"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/fragment_sy_fx_lv_header_leibie2_tv1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#343434"
                android:text="#音乐"
                android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_leibie2_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:id="@+id/fragment_sy_fx_lv_header_leibie2_tv2"
                android:layout_below="@+id/fragment_sy_fx_lv_header_leibie2_tv1"
                android:textSize="16sp"
                android:text="马上开始的世界杯，各个队伍的准备非常充分"
                android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_leibie2_img"
                android:layout_toLeftOf="@+id/fragment_sy_fx_lv_header_leibie2_guanzhu"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_sy_fx_lv_header_leibie2_guanzhu"
                android:layout_marginRight="3dp"
                android:background="@drawable/bg_fragment_sy_tj_guanzhu"
                android:text="+关注"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <RelativeLayout
            android:id="@+id/fragment_sy_fx_lv_header_leibie3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/fragment_sy_fx_lv_header_leibie3_img"
                android:src="@drawable/wudao"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/fragment_sy_fx_lv_header_leibie3_tv1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#343434"
                android:text="#舞蹈"
                android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_leibie3_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:id="@+id/fragment_sy_fx_lv_header_leibie3_tv2"
                android:layout_below="@+id/fragment_sy_fx_lv_header_leibie3_tv1"
                android:textSize="16sp"
                android:text="马上开始的世界杯，各个队伍的准备非常充分"
                android:layout_toRightOf="@+id/fragment_sy_fx_lv_header_leibie3_img"
                android:layout_toLeftOf="@+id/fragment_sy_fx_lv_header_leibie3_guanzhu"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_sy_fx_lv_header_leibie3_guanzhu"
                android:layout_marginRight="3dp"
                android:background="@drawable/bg_fragment_sy_tj_guanzhu"
                android:text="+关注"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <TextView
            android:layout_marginTop="18dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:text="热门评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
