<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_sy_fx_lv_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/touxiang" />

        <RelativeLayout
            android:id="@+id/fragment_sy_fx_lv_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fragment_sy_fx_lv_touxiang">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_sy_fx_lv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="匿名用户"
                    android:textColor="#343434"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="评论:" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/fragment_sy_fx_lv_more"
                android:background="@drawable/bg_fragment_sy_fx_reping"
                android:text="热评"
                android:textColor="#3A8DF3"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/fragment_sy_fx_lv_more"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/more" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_sy_fx_lv_rl"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/fragment_sy_fx_lv_touxiang"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_sy_fx_lv_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手太小，钢琴根本玩不来啊！你们是不是也是啊，还有什么好用的乐器。"
                android:textColor="#2C2C2C" />

            <LinearLayout
                android:id="@+id/fragment_sy_fx_lv_ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#EAEAEA"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_sy_fx_lv_cover"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/fragment_sy_fx_lv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="钢琴曲新手入门:键位(一)"
                        android:textColor="#2E2E2E"
                        android:textSize="16sp" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/fragment_sy_fx_lv_rv_biaoqian"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/fragment_sy_fx_lv_huifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="回复"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fragment_sy_fx_lv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="09:51"
                    android:textSize="15sp" />

                <!--<LinearLayout-->
                    <!--android:id="@+id/fragment_sy_fx_lv_zan_ll"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true">-->

                    <!--<TextView-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:id="@+id/fragment_sy_fx_lv_zan_num"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="5dp"-->
                        <!--android:text="100"-->
                        <!--android:textColor="#343434"-->
                        <!--android:textSize="15sp" />-->

                    <!--<ImageView-->
                        <!--android:id="@+id/fragment_sy_fx_lv_zan_img"-->
                        <!--android:layout_width="18dp"-->
                        <!--android:layout_height="18dp"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:scaleType="centerCrop"-->
                        <!--android:src="@drawable/zan" />-->

                <!--</LinearLayout>-->

            </RelativeLayout>

            <View
                android:layout_marginTop="8dp"
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
