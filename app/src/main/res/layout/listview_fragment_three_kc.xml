<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/fragment_three_lv_iv_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_alignTop="@+id/fragment_three_lv_iv_img"
        android:layout_alignBottom="@+id/fragment_three_lv_iv_img"
        android:layout_toRightOf="@+id/fragment_three_lv_iv_img"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_three_lv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="高中化学选修5-学习培训班，学习培训班，学习培训班"
            android:textColor="#343434"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/fragment_three_lv_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_three_lv_title"
            android:background="@drawable/bg_fragment_three_lv_tv"
            android:text="学生补习"
            android:textColor="#F45460" />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/fragment_three_lv_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_three_lv_title"
            android:layout_toRightOf="@+id/fragment_three_lv_tv1"
            android:background="@drawable/bg_fragment_three_lv_tv"
            android:text="12课时"
            android:textColor="#F45460" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/fragment_three_lv_tv_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_three_lv_tv1"
            android:text="¥6000.00"
            android:textColor="#F45460"
            android:textSize="20sp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/fragment_three_lv_tv_fukuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fragment_three_lv_tv_jiage"
            android:layout_toRightOf="@+id/fragment_three_lv_tv_jiage"
            android:text="34人付款"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/fragment_three_lv_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_three_lv_tv_jiage"
            android:text="德嘉专升本" />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_three_lv_tv_jiage"
            android:layout_toRightOf="@+id/fragment_three_lv_tv_name"
            android:text="进店 >" />

    </RelativeLayout>

</RelativeLayout>
